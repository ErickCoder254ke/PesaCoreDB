# PesacodeDB Frontend Environment Variables
# Copy this file to .env and update the values

# Backend API URL
# For local development: http://localhost:8000
# For production: https://your-app.railway.app (or your deployed URL)
REACT_APP_BACKEND_URL=http://localhost:8000

# API Key Authentication
# CRITICAL: Must match the API_KEY in backend/.env
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
REACT_APP_API_KEY=your_api_key_here

# Set to "false" if backend has REQUIRE_API_KEY=false, otherwise "true"
REACT_APP_REQUIRE_API_KEY=true

# Gemini AI Configuration (Optional - for AI assistant features)
# Get your API key from: https://aistudio.google.com/app/apikey
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here
